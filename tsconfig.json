{
    "compilerOptions": {
        "lib": [
            "es2020",
            "webworker.importscripts",
            "dom"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "removeComments": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "assets/**/*"
    ]
}
